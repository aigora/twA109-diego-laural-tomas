#include <stdio.h>
#include <stdlib.h>
#include <string.h>
#include "SerialPort.h"


// Funciones prototipo
void autoConnect(SerialPort *arduino,char*);
int main(void)
{
 //Arduino SerialPort object
 SerialPort *arduino2;
 // Puerto serie en el que está Arduino
 char* portName = "\\\\.\\COM3";


 // Buffer para datos enviados a Arduino
 int outcomingData;
 
 outcomingData=m;
 
 // Crear estructura de datos del puerto serie
 arduino2 = (SerialPort *)malloc(sizeof(SerialPort));
 // Apertura del puerto serie
 Crear_Conexion(arduino2,portName);
 autoConnect(arduino2,outcomingData);
}
void autoConnect(SerialPort *arduino2,float *outcomingData)
{
 int readResult;

// Espera la conexión con Arduino
while (!isConnected(arduino2))
{
Sleep(100);
Crear_Conexion(arduino2,arduino2->portName);
}
 //Comprueba si arduino está connectado
if (isConnected(arduino2))
{
printf ("Conectado con Arduino en el puerto %s\n",arduino2->portName);
}
 // Bucle de la aplicación
while (isConnected(arduino2))
{
 readResult = readSerialPort(arduino2,outcomingData);                 
if (readResult!=0)
 printf("%d - %d\n", outcomingData,readResult);
 Sleep(10);
}
if (!isConnected(arduino2))
 printf ("Se ha perdido la conexión con Arduino2\n");
}
